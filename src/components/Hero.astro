<section
  id="hero"
  class="h-screen flex items-center justify-center relative overflow-hidden"
>
  <div class="absolute inset-0 z-0 opacity-30">
    <video autoplay class="w-full h-full object-cover" loop muted playsinline>
      <source src="/video-bg.mp4" type="video/mp4" />
    </video>
  </div>
  <div class="absolute inset-0 bg-black opacity-50 z-10"></div>
  <div class="text-center z-20 px-4">
    <h1
      class="font-unbounded text-5xl md:text-8xl lg:text-9xl font-black uppercase text-shadow-red animate-pulse text-[var(--cream)]"
    >
      Beautifully <br /> Brutal Digital <br /> Experiences
    </h1>
    <p class="text-xl md:text-2xl mt-8 font-mono text-[var(--dark-cream)]">
      We design and code with purpose and rebellion.
    </p>
    <a
      class="inline-block mt-12 bg-[var(--burned-red)] text-[var(--cream)] font-bold py-4 px-12 uppercase tracking-widest hover:bg-[var(--cream)] hover:text-[var(--burned-red)] transition-all duration-300 transform hover:scale-105 glitch-hover"
      href="#work"
    >
      See Our Work
    </a>
  </div>
