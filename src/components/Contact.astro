<section class="py-20 md:py-32 px-6 md:px-12 bg-black relative" id="contact">
  <div class="absolute inset-0 z-0 opacity-10 glitch"></div>
  <div class="max-w-3xl mx-auto text-center relative z-10">
    <h2
      class="font-unbounded text-4xl md:text-6xl font-black mb-8 text-[var(--cream)]"
    >
      Does your brand need <span class="text-[var(--burned-red)]">noise</span>?
    </h2>
    <form class="space-y-6">
      <input
        class="w-full p-4 bg-gray-900 border-2 border-gray-700 text-[var(--cream)] font-mono focus:border-[var(--burned-red)] focus:outline-none transition-colors"
        placeholder="Your Name"
        type="text"
      />
      <input
        class="w-full p-4 bg-gray-900 border-2 border-gray-700 text-[var(--cream)] font-mono focus:border-[var(--burned-red)] focus:outline-none transition-colors"
        placeholder="Your Email"
        type="email"
      />
      <textarea
        class="w-full p-4 bg-gray-900 border-2 border-gray-700 text-[var(--cream)] font-mono focus:border-[var(--burned-red)] focus:outline-none transition-colors"
        placeholder="Tell us about your noise"
        rows="5"></textarea>
      <button
        class="w-full bg-[var(--burned-red)] text-[var(--cream)] font-bold py-4 px-12 uppercase tracking-widest hover:bg-[var(--cream)] hover:text-[var(--burned-red)] transition-all duration-300 transform hover:scale-105"
        type="submit"
      >
        Make Some Noise
      </button>
    </form>
  </div>
</section>
